<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WMS" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorBackground">#f2f2f2</item>
        <item name="colorOnBackground">#676666</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_700</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/gray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.WMS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>